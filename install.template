#!/bin/bash

PREFIX=/usr/local
PROFILE=/etc/profile

cp hub-repositories $PREFIX/bin

grep DEFAULT_HUB= $PROFILE > /dev/null && exit 0
cat <<EOS >> $PROFILE
DEFAULT_HUB=\`which hub\`
hub() {
  if [[ \${1} = repositories ]]
  then
    shift
    hub-repositories \$@
  else
    \$DEFAULT_HUB \$@
  fi
}
EOS
